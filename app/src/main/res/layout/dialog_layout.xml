<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_8dp">

        <TextView
            android:id="@+id/text_view_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/title"
            android:textColor="@color/text_view_hover"
            android:textSize="@dimen/_16dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/color_date"></FrameLayout>

    <ListView
        android:id="@+id/list_view_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/list_devider"></ListView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/color_date"></FrameLayout>

    <LinearLayout
        android:id="@+id/layout_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_8dp">

        <TextView
            android:id="@+id/text_view_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/delete"
            android:textColor="@color/text_view_hover"
            android:textSize="@dimen/_16dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/color_date"></FrameLayout>

    <LinearLayout
        android:id="@+id/layout_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_8dp">

        <TextView
            android:id="@+id/text_view_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Cancle"
            android:textColor="@color/text_view_hover"
            android:textSize="@dimen/_16dp" />

    </LinearLayout>

</LinearLayout>